<!-- filepath: c:\AirSync_.net\AddEditGameDialog.xaml -->
<Window x:Class="AirSync.AddEditGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Game"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0"
                Padding="24"
                Mode="PrimaryMid">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon x:Name="HeaderIcon"
                        Kind="Plus"
                        Width="24"
                        Height="24"
                                         VerticalAlignment="Center"
                        Margin="0,0,12,0"/>
                <TextBlock x:Name="HeaderText"
                        Text="Add New Game"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                Padding="24"
                VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Game Name -->
                <TextBox x:Name="GameNameTextBox"
                         materialDesign:HintAssist.Hint="Game Name"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,16"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         TextChanged="GameNameTextBox_TextChanged"/>

                <!-- Game Path -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="GamePathTextBox"
                            Grid.Column="0"
                             materialDesign:HintAssist.Hint="Game Executable Path"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,8,0"
                             Text="{Binding Path, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="GamePathTextBox_TextChanged"/>

                    <Button Grid.Column="1"
                            Content="Browse"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="BrowseGame_Click"
                            Width="80"/>
                </Grid>

                <!-- Arguments -->
                <TextBox x:Name="ArgumentsTextBox"
                         materialDesign:HintAssist.Hint="Command Line Arguments (Optional)"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,16"
                         Text="{Binding Arguments, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Auto-detect Section -->
                <materialDesign:Card Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                    Text="ðŸ” Auto-detect Installed Games"
                                       FontWeight="SemiBold"
                                    VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Click="ScanGames_Click"
                                    Background="#FF9800"
                                    BorderBrush="#FF9800">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Magnify"
                                                Width="16"
                                                Height="16"
                                                                 VerticalAlignment="Center"
                                                Margin="0,0,4,0"/>
                                        <TextBlock Text="Scan"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </Grid>

                        <TextBlock Text="Automatically detect racing games installed on your system"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Opacity="0.7"
                                Margin="0,0,0,12"/>

                        <!-- Detected Games List -->
                        <ScrollViewer x:Name="DetectedGamesScrollViewer"
                                MaxHeight="150"
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="DetectedGamesList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:Card Margin="0,0,0,4"
                                                Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <materialDesign:PackIcon Grid.Column="0"
                                                        Kind="Gamepad2"
                                                                         Width="20"
                                                        Height="20"
                                                                         VerticalAlignment="Center"
                                                                         Margin="0,0,8,0"
                                                                         Foreground="#4CAF50"/>

                                                <StackPanel Grid.Column="1"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                            FontWeight="SemiBold"
                                                            FontSize="13"/>
                                                    <TextBlock Text="{Binding Path}"
                                                            Opacity="0.7"
                                                            FontSize="11"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <Button Grid.Column="2"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Content="Use"
                                                        Click="UseDetectedGame_Click"
                                                        Tag="{Binding}"
                                                        Padding="8,4"/>
                                            </Grid>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Loading indicator -->
                        <StackPanel x:Name="ScanningPanel"
                                Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                Visibility="Collapsed"
                                    Margin="0,12,0,0">
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         Width="20"
                                    Height="20"
                                    IsIndeterminate="True"
                                         Margin="0,0,8,0"/>
                            <TextBlock Text="Scanning for games..."
                                    VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Validation Messages -->
                <StackPanel x:Name="ValidationPanel"
                        Visibility="Collapsed"
                        Margin="0,0,0,16">
                    <Border Background="#FFEBEE"
                            BorderBrush="#F44336"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle"
                                    Foreground="#F44336"
                                                     Width="16"
                                    Height="16"
                                    VerticalAlignment="Center"
                                                     Margin="0,0,8,0"/>
                            <TextBlock x:Name="ValidationMessage"
                                    Foreground="#F44336"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource MaterialDesignDivider}"
                Height="1"/>
        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                    Margin="24,16,24,16">
            <Button Content="Cancel"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="Cancel_Click"
                    Margin="0,0,8,0"
                    Padding="16,8"/>
            <Button x:Name="SaveButton"
                    Content="Add Game"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="Save_Click"
                    Background="#4CAF50"
                    BorderBrush="#4CAF50"
                    Padding="16,8"/>
        </StackPanel>
    </Grid>
</Window>
